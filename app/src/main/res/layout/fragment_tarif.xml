<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TarifFragment">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="250dp"
        android:layout_height="170dp"
        android:layout_marginTop="95dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_baseline_image_24"
        android:scaleType="fitXY"
        />
    <EditText
        android:id="@+id/yemek_isim"
        app:layout_constraintTop_toBottomOf="@id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:hint="Yemek Ismi Giriniz:"
        />
    <EditText
        android:id="@+id/yemek_tarif"
        app:layout_constraintTop_toBottomOf="@id/yemek_isim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="15dp"
        android:hint="Yemek Tarifi Giriniz:"
        />
    <Button
        android:id="@+id/kaydet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#708090"
        app:layout_constraintTop_toBottomOf="@id/yemek_tarif"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"
        android:text="kaydet"
        />
</androidx.constraintlayout.widget.ConstraintLayout>